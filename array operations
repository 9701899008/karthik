#include <stdio.h>

int main() {
    int arr[5] = {1, 2, 4, 5};
    int size = 4;

    // Insertion
    int pos = 2;
    int element = 3;
    for (int i = size; i >= pos; i--) {
        arr[i] = arr[i - 1];
    }
    arr[pos - 1] = element;
    size++;

    // Deletion
    pos = 3;
    for (int i = pos - 1; i < size - 1; i++) {
        arr[i] = arr[i + 1];
    }
    size--;

    // Display
    for (int i = 0; i < size; i++) {
        printf("%d ", arr[i]);
    }

    return 0;
}
output:
5
